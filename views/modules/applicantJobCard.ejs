<%- include('../modules/head') %>

    <div class="mt-5 mb-5" style="background-color: rgba(173, 172, 172, 0.13);">
        <form class="d-flex justify-content-between">
            <div class="col-md-5 ms-5">
                <div class="input-group mb-3 mt-5">
                    <span class="input-group-text" id="basic-addon1">Title</span>
                    <input type="text" class="form-control" name="title" placeholder="No Title" aria-label="title"
                        aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Discription</span>
                    <input type="text" class="form-control" name="discription" placeholder="No Discription"
                        aria-label="discription" aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Deadline</span>
                    <input type="date" class="form-control" name="deadline" placeholder="No Deadline"
                        aria-label="deadline" aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Type</span>
                    <input type="text" class="form-control" name="type" placeholder="No Type" aria-label="type"
                        aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Placement</span>
                    <input type="text" class="form-control" name="placement" placeholder="No Placement"
                        aria-label="placement" aria-describedby="basic-addon1" readonly>
                </div>
            </div>
            <div class="col-md-5 me-5">
                <div class="input-group mb-3 mt-5">
                    <span class="input-group-text" id="basic-addon1">Salary</span>
                    <input type="number" class="form-control" name="salary" placeholder="No Salary" aria-label="salary"
                        aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Location</span>
                    <input type="text" class="form-control" name="location" placeholder="No Location"
                        aria-label="location" aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Vacancy</span>
                    <input type="text" class="form-control" name="vacancy" placeholder="No Vacancy" aria-label="vacancy"
                        aria-describedby="basic-addon1" readonly>
                </div>
                <div class="input-group mb-3 mt-2">
                    <span class="input-group-text" id="basic-addon1">Status</span>
                    <input type="text" class="form-control" name="status" placeholder="No Status" aria-label="status"
                        aria-describedby="basic-addon1" readonly>
                </div>
            </div>
        </form>
        <div class="mt-3">
            <button type="submit" class="btn btn-dark px-5 mt-3 mb-5 me-2">Apply</button>
        </div>
    </div>