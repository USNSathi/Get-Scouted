<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="images/job-icon.png" type="image/x-icon">

    <!-- Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- CSS File -->
    <link rel="stylesheet" href="/css/index.css">

    <% if (url=='/login' ) { %>
        <link rel="stylesheet" href="/css/login.css">
        <% } else if (url=='/signup' ) {%>
            <link rel="stylesheet" href="/css/sign-up.css">
            <% } else if (url=='/aboutus' ) {%>
                <link rel="stylesheet" href="/css/about-us.css">
                <% } else if (url=='/contact' ) {%>
                    <link rel="stylesheet" href="/css/contact-us.css">
                    <% } else if (url.includes('/applicant/profile/') ) {%>
                        <link rel="stylesheet" href="/css/profile.css">
                        <link rel="stylesheet" href="/css/applicant-dash.css">

                        <% } else if (url.includes('/applicant') ) {%>
                            <link rel="stylesheet" href="/css/applicant-dash.css">
                            <% } else if (url=='/recruiter/profile/edit' ) {%>
                                <link rel="stylesheet" href="/css/profile.css">
                                <% }else if (url.includes('/recruiter') ) {%>
                                    <link rel="stylesheet" href="/css/companies-dashboard.css">
                                    <% } else if (url=='/admin' ) {%>
                                        <link rel="stylesheet" href="/css/admin-dashboard.css">
                                        <% } %>

                                            <!-- Icon -->
                                            <link rel="stylesheet" type="text/css"
                                                href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">GET SCOUTED</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <% if (url.includes('/applicant')) { %>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 invisible">
                        <% } else { %>
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 visible">
                                <% } %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/jobs">Jobs</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/companies">Company</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/aboutus">About Us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/contact">Contact Us</a>
                                    </li>
                            </ul>
                            <div class="navbar-text">
                                <% if (!isLogin) { %>
                                    <a href="/login" class="link-dark">Login</a> <span> or </span>
                                    <a href="/signup" class="link-dark">Sign up</a>
                                    <% } else { %>
                                        <a href="/auth/logout" class="link-dark">Logout</a>
                                        <% } %>
                            </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->