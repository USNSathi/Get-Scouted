<%- include('../modules/head') %>

    <div class="container pb-5">
        <div class="row">
            <div class="col-md-3">
                <%- include('modules/sidebar') %>

            </div>
            <div class="col-md-9">
                <div class="d-flex align-items-center justify-content-center">
                    <div>
                        <h1 class="text-center">Profile</h1>
                        <hr>
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                <label class="labels">User Address</label><input type="text" class="form-control"
                                    name="address" placeholder="Address" value="<%= data.user.address %>" readonly>
                            </div>

                            <div class="col-md-12 pb-5 mt-3">
                                <label class="labels">User Phone</label><input type="text" class="form-control"
                                    name="phone" placeholder="enter phone number" value="<%= data.user.phone %>"
                                    readonly>
                            </div><br>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="companyName">Company Name</label>
                                    <input type="text" class="form-control" id="companyName"
                                        placeholder="No Company Name" value="<%- data.user.name %>" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" i class="form-control" id="email"
                                        placeholder="No Email" value="<%- data.credential.email %>" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Contact Number</label>
                                    <input type="text" class="form-control" id="contactNumber"
                                        placeholder="No Contact Number" contenteditable="false"
                                        value="<%- data.recruiter.contactNumber %>" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="address">Company Address</label>
                                    <input type="text" class="form-control" id="companyAddress"
                                        placeholder="No Company Address" value="<%- data.recruiter.companyAddress %>"
                                        readonly>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Year of Establishment</label><input type="text"
                                    id="yearOfEstablishment" class="form-control" name="yearOfEstablishment"
                                    value="<%- data.recruiter.yearOfEstablishment %>" readonly>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="address">Country</label>
                                    <input type="text" class="form-control" id="country" placeholder="No Country"
                                        value="<%- data.recruiter.country %>" readonly>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="address">Region</label>
                                    <input type="text" class="form-control" id="address" placeholder="No Region"
                                        value="<%- data.recruiter.region %>" readonly>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Business Description</label><input type="text"
                                    class="form-control" name="businessDescription"
                                    placeholder="No Business Description"
                                    value="<%- data.recruiter.businessDescription %>" readonly>
                            </div>

                            <div class="col-md-12">
                                <label class="labels">Business/Trading License No.</label><input type="text"
                                    class="form-control" name="tradingLicenseNo."
                                    placeholder="No Business/Trading License No."
                                    value="<%- data.recruiter.tradingLicense %>" readonly>
                            </div>

                            <div class="col-md-12">
                                <label class="labels">Website URL</label><input type="text" name="websiteURL"
                                    class="form-control" name="status" placeholder="No Website URL"
                                    value="<%- data.recruiter.websiteURL %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/vendor/bootstrap.bundle.min.js"></script>

    </body>

    </html>