<div class="accordion mt-5" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne-<%= index %>">
            <div class="d-flex justify-content-between">
                <div>
                    <h4 class="text-start ps-5 pt-3">
                        <%= job.title %>
                    </h4>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="accordion-button collapsed btn-lg bg-dark me-5" style="width: 90px; " type="button"
                        data-bs-toggle="collapse" data-bs-target="#collapseOne-<%= index %>" aria-expanded="false"
                        aria-controls="collapseOne-<%= index %>">
                        <h6 class="text-white">View</h6>
                    </button>
                    <a href="<%%>" class="btn btn-dark px-3">More</a>
                </div>
            </div>
        </h2>
        <div id="collapseOne-<%= index %>" class="accordion-collapse collapse" aria-labelledby="headingOne-<%= index %>"
            data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <%= job.description %>
            </div>
            <div class="mt-5 mb-5" style="background-color: rgba(173, 172, 172, 0.13);">
                <form class="d-flex justify-content-between">
                    <div class="col-md-5 ms-5">
                        <div class="input-group mb-3 mt-2">
                            <span class="input-group-text" id="basic-addon1">Deadline</span>
                            <input type="date" class="form-control" name="deadline" placeholder="No Deadline"
                                aria-label="deadline" aria-describedby="basic-addon1" value="<%= job.deadline %>"
                                readonly>
                        </div>
                        <div class="input-group mb-3 mt-2">
                            <span class="input-group-text" id="basic-addon1">Type</span>
                            <input type="text" class="form-control" name="type" placeholder="No Type" aria-label="type"
                                value="<%= job.type %>" aria-describedby="basic-addon1" readonly>
                        </div>
                        <div class="input-group mb-3 mt-2">
                            <span class="input-group-text" id="basic-addon1">Placement</span>
                            <input type="text" class="form-control" name="placement" placeholder="No Placement"
                                value="<%= job.placement %>" aria-label="placement" aria-describedby="basic-addon1"
                                readonly>
                        </div>
                    </div>
                    <div class="col-md-5 me-5">
                        <div class="input-group mb-3  mt-2">
                            <span class="input-group-text" id="basic-addon1">Salary</span>
                            <input type="number" class="form-control" name="salary" placeholder="No Salary"
                                value="<%= job.salary %>" aria-label="salary" aria-describedby="basic-addon1" readonly>
                        </div>
                        <div class="input-group mb-3 mt-2">
                            <span class="input-group-text" id="basic-addon1">Location</span>
                            <input type="text" class="form-control" name="location" placeholder="No Location"
                                value="<%= job.location %>" aria-label="location" aria-describedby="basic-addon1"
                                readonly>
                        </div>
                        <div class="input-group mb-3 mt-2">
                            <span class="input-group-text" id="basic-addon1">Vacancy</span>
                            <input type="text" class="form-control" name="vacancy" placeholder="No Vacancy"
                                value="<%= job.vacancy %>" aria-label="vacancy" aria-describedby="basic-addon1"
                                readonly>
                        </div>
                        <div class="input-group mb-3 mt-2">
                            <span class="input-group-text" id="basic-addon1">Status</span>
                            <input type="text" class="form-control" name="status" placeholder="No Status"
                                value="<%= job.status %>" aria-label="status" aria-describedby="basic-addon1" readonly>
                        </div>
                    </div>
                </form>
                <div class="mt-3">
                    <% if(job.status !=="open" ) { %>
                        <button type="button" class="btn btn-dark px-5 mt-3 mb-5 me-2" data-index="<%= index%>">
                            Open</button>
                        <% } if (job.status!=="filled" ) { %>
                            <button type="button" class="btn btn-dark px-5 mt-3 mb-5 me-2" data-index="<%= index%>">
                                Filled </button>
                            <% } if(job.status !==" close" ) { %>
                                <button type="button" class="btn btn-dark px-5 mt-3 mb-5 me-2" data-index="<%=index%>">
                                    Close</button>
                                <% } %>
                </div>
            </div>
        </div>
    </div>