<%- include('modules/head') %>
    <!-- Sign up From Start -->

    <div class="sign-up-form">
        <h1>Sign Up</h1>
        <form id="signupForm" action="/auth/register" method="post">
            <label> Name</label>
            <input type="text" id="name" class="input-box" name="name" placeholder="Your Name">
            <label> Email</label>
            <input type="email" id="email" name="email" class="input-box" placeholder="abc@gmail.com">
            <label> Password</label>
            <input type="password" id="password" name="password" class="input-box" placeholder="Your Password">
            <label> Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="input-box"
                placeholder="Your Password">
            <p>
                <span><input type="checkbox" class="radio" value="applicant" name="role" onclick="onlyOne(this)"
                        checked />Job
                    Candidate</span>
            </p>

            <p>
                <span><input type="checkbox" class="radio" value="recruiter" name="role" onclick="onlyOne(this)" />Job
                    Company</span>
            </p>
            <div>
                <span id="notvalid"></span>
            </div>
            <script type="text/javascript">
                function onlyOne(checkbox) {
                    var checkboxes = document.getElementsByName('role');
                    checkboxes.forEach((item) => {
                        if (item !== checkbox) item.checked = false;
                    });
                }
            </script>
            <button type="submit" class="signup-btn">Sign Up</button>
            <hr>
            <p>Already have an account? <a href="#">Login</a></p>
        </form>

        <script src="/js/vendor/jquery-3.6.0.min.js"></script>
        <script src="/js/auth/signup.js"></script>
    </div>
    </body>

    <!-- Sign up From End -->

